@model IEnumerable<InventoryHub.Web.Models.ViewModels.InventoryRowVm>

@{
    ViewData["Title"] = "Index";
}

<h1>Inventories</h1>

<div class="d-flex gap-2 mb-2">
    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <a class="btn btn-primary" asp-action="Create">New inventory</a>
    }
</div>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-hover align-middle">
  <thead>
    <tr>
      <th>Title</th>
      <th>Created by</th>
      <th>Category</th>
      <th>Public</th>
      <th>Created at</th>
    </tr>
  </thead>
  <tbody>
  @foreach (var r in Model)
  {
      <tr>
        <td><a asp-action="Edit" asp-route-id="@r.Id">@r.Title</a></td>
        <td>@r.OwnerUserName</td>
        <td>@r.Category</td>
        <td>@(r.IsPublic ? "Yes" : "No")</td>
        <td>@r.CreatedAtUTC.ToLocalTime().ToString("g")</td>
      </tr>
  }
  </tbody>
</table>
