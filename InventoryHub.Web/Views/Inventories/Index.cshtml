@model IEnumerable<InventoryHub.Web.Models.Inventory>

@{
    ViewData["Title"] = "Index";
}

<h1>Inventories</h1>

<div class="d-flex gap-2 mb-2">
    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <a class="btn btn-primary" asp-action="Create">New inventory</a>
    }
</div>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-hover align-middle">
    <thead>
        <tr>
            <th>Title</th>
            <th>Category</th>
            <th>Public</th>
            <th>Owner</th>
            <th>Created</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var inv in Model)
    {
        <tr>
            <td><a asp-action="Edit" asp-route-id="@inv.Id">@inv.Title</a></td>
            <td>@inv.Category</td>
            <td>@(inv.IsPublic ? "Yes" : "No")</td>
            <td>@inv.CreatorId</td>
            <td>@inv.CreatedAtUTC.ToLocalTime().ToString("g")</td>
        </tr>
    }
    </tbody>
</table>
